{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "noEmit": false
  },
  "include": ["src", "src/tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}