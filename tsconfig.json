{
  "ts-node": {
  "esm": true,
  "experimentalSpecifierResolution": "node"
},

  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "noEmit": false
  },
  "include": ["src", "src/tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}